<html>
<head>
  <title>NBA Standings</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gelasio:ital,wght@0,400..700;1,400..700&family=Silkscreen:wght@700&display=swap" rel="stylesheet">
</head>
<body>
  <main class="container">
    <h1>NBA Standings</h1>
    <form action="/" method="GET">
        <button class='special-button' type="submit">Return Home</button>
    </form>
    <div class="conference-container">
      <section class="conference">
        <h2>Eastern Conference</h2>
        <table>
          <thead>
            <tr>
              <th>Rank</th>
              <th>Team</th>
              <th>W</th>
              <th>L</th>
              <th>PCT</th>
              <th>GB</th>
            </tr>
          </thead>
          <tbody>
            <% easternConference.forEach(team => { %>
              <tr>
                <td><%= team.conference.rank %></td>
                <td><%= team.team.name %></td>               
                <td><%= team.win.total %></td>
                <td><%= team.loss.total %></td>
                <td><%= team.win.percentage %></td>
                <td><%= team.gamesBehind || '--' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </section>

      <section class="conference">
        <h2>Western Conference</h2>
        <table>
          <thead>
            <tr>
              <th>Rank</th>
              <th>Team</th>
              <th>W</th>
              <th>L</th>
              <th>PCT</th>
              <th>GB</th>
            </tr>
          </thead>
          <tbody>
            <% westernConference.forEach(team => { %>
              <tr>
                <td><%= team.conference.rank %></td>
                <td><%= team.team.name %></td>
                <td><%= team.win.total %></td>
                <td><%= team.loss.total %></td>
                <td><%= team.win.percentage %></td>
                <td><%= team.gamesBehind || '--' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </section>
    </div>
  </main>
</body>
</html>